<?xml version="1.0" encoding="UTF-8"?>
<!--
  Forge HMS 3.1.3 — S3A / MinIO configuration.
  Credentials come from AWS_ACCESS_KEY_ID / AWS_SECRET_ACCESS_KEY env vars
  set in docker-compose.yml (never hardcoded here).
-->
<configuration>
    <!-- Warehouse on MinIO -->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>s3a://forge/lake/warehouse/</value>
    </property>

    <!-- S3A / MinIO endpoint -->
    <property>
        <name>fs.s3a.endpoint</name>
        <value>http://minio:9000</value>
    </property>
    <property>
        <name>fs.s3a.path.style.access</name>
        <value>true</value>
    </property>
    <property>
        <name>fs.s3a.connection.ssl.enabled</name>
        <value>false</value>
    </property>
    <property>
        <name>fs.s3a.impl</name>
        <value>org.apache.hadoop.fs.s3a.S3AFileSystem</value>
    </property>

    <!-- Credentials from AWS_ACCESS_KEY_ID / AWS_SECRET_ACCESS_KEY env vars.
         EnvironmentVariableCredentialsProvider reads env vars at runtime,
         so secrets are never persisted in config files (security handbook §9). -->
    <property>
        <name>fs.s3a.aws.credentials.provider</name>
        <value>com.amazonaws.auth.EnvironmentVariableCredentialsProvider</value>
    </property>

    <!-- Retained from image defaults -->
    <property>
        <name>hive.server2.enable.doAs</name>
        <value>false</value>
    </property>
    <property>
        <name>hive.exec.scratchdir</name>
        <value>/opt/hive/scratch_dir</value>
    </property>
    <property>
        <name>hive.exec.submit.local.task.via.child</name>
        <value>false</value>
    </property>
    <property>
        <name>mapreduce.framework.name</name>
        <value>local</value>
    </property>
    <property>
        <name>metastore.metastore.event.db.notification.api.auth</name>
        <value>false</value>
    </property>
</configuration>
